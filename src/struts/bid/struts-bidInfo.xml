<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
    
<struts>
    <package name="bidInfo" namespace="/bidInfo" extends="struts-default">
    	<!-- 입찰공고을 조회한다. 페이징처리없음 -->
    	<action name="listBidInfo" method="listBidInfo" class="com.kps.bid.action.BidInfoAction">
    		<result name="success" type="stream">
    			<param name="inputName">inputStream</param>
    			<param name="contentType">text/plain</param>
    			<param name="bufferSize">4096</param>
    		</result>
    	</action>
    	
    	<!-- 입찰공고을 조회한다. 페이징처리 -->
    	<action name="listBidInfoPaging" method="listBidInfoPaging" class="com.kps.bid.action.BidInfoAction">
    		<result name="success" type="stream">
    			<param name="inputName">inputStream</param>
    			<param name="contentType">text/plain</param>
    			<param name="bufferSize">4096</param>
    		</result>
    	</action>
    	
    	<!-- 입찰공고에 글을 등록한다. -->
    	<action name="insertBidInfo" method="insertBidInfo" class="com.kps.bid.action.BidInfoAction">
    		<result name="success" type="stream">
    			<param name="inputName">inputStream</param>
    			<param name="contentType">text/plain</param>
    			<param name="bufferSize">4096</param>
    		</result>
    	</action>
    	
    	<!-- 입찰공고을 수정한다. -->
    	<action name="updateBidInfo" method="updateBidInfo" class="com.kps.bid.action.BidInfoAction">
    		<result name="success" type="stream">
    			<param name="inputName">inputStream</param>
    			<param name="contentType">text/plain</param>
    			<param name="bufferSize">4096</param>
    		</result>
    	</action>
    	
    	<!-- 입찰공고을 삭제한다. -->
    	<action name="deleteBidInfo" method="deleteBidInfo" class="com.kps.bid.action.BidInfoAction">
    		<result name="success" type="stream">
    			<param name="inputName">inputStream</param>
    			<param name="contentType">text/plain</param>
    			<param name="bufferSize">4096</param>
    		</result>
    	</action>
    	
    	<!-- 입찰공고을 읽는다. -->
    	<action name="readBidInfo" method="readBidInfo" class="com.kps.bid.action.BidInfoAction">
    		<result name="success" type="stream">
    			<param name="inputName">inputStream</param>
    			<param name="contentType">text/plain</param>
    			<param name="bufferSize">4096</param>
    		</result>
    	</action>
    	
    </package>
</struts> 

#navcontainer {
        width: 100%;
        padding: 15px;
        margin: 3px 0 20px 0;
        border: 1px solid #ccc;
        background: #fff;
}

/* pyramid */

#navlist {
        margin: 0;
        padding: 0 0 20px 10px;
        border-bottom: 1px solid #9FB1BC;
}

#navlist a{ cursor: pointer;}

#navlist li {
        margin: 0;
        padding: 0;
        display: inline;
        list-style-type: none;
}

#navlist li span {
        float: left;
        font-size: 12px;
        line-height: 14px;
        font-weight: bold;
        padding: 0 12px 6px 12px;
        text-decoration: none;
        color: #708491;
}

#navlist li.active span, #navlist a:hover span {
        color: #000;
        background: url("../img/pyramid.gif") no-repeat bottom center;
}